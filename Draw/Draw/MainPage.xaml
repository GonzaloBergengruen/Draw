<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Draw"
             x:Class="Draw.MainPage">

    <VerticalStackLayout>
        <local:SignatureView 
                    x:Name="SignatureCanvas"
                    HeightRequest="500"
                    WidthRequest="500" />

        <HorizontalStackLayout Spacing="10">
            <Button 
            Text="Guardar" 
            Clicked="OnSaveImageClicked" />
            <Button 
            Text="Borrar" 
            Clicked="OnClearCanvasClicked" />
        </HorizontalStackLayout>
    </VerticalStackLayout>


</ContentPage>
